<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.cdqj.cdqjpatrolandroid.comstomview.CustomGridView
            android:id="@+id/spinner_window_gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:horizontalSpacing="@dimen/dp_5"
            android:numColumns="4"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:verticalSpacing="@dimen/dp_5"/>

        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:elevation="@dimen/dp_2"
            android:id="@+id/spinner_window_btn"
            android:paddingTop="@dimen/map_view_margin_8"
            android:paddingBottom="@dimen/map_view_margin_8"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_below="@+id/spinner_window_gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_button_blue_click"
            android:text="чбо        шод"
            android:textColor="@drawable/btn_text_color_blue"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:elevation="@dimen/dp_2"
            android:layout_below="@+id/spinner_window_btn"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>


</RelativeLayout>
