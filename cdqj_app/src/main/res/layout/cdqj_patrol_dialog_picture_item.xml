<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:padding="@dimen/map_view_margin_8"
        style="@style/toolbar_title_text"
        android:id="@+id/dialog_picture_item_name"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="相册"
        android:textColor="@color/text_theme"
        android:textSize="@dimen/text_normal"
        />

    <TextView
        android:id="@+id/dialog_picture_item_line"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_picture_item_name"
        android:background="@color/line"/>

</android.support.constraint.ConstraintLayout>