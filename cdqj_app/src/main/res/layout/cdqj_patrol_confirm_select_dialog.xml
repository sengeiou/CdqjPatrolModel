<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/confirm_select_title"
        style="@style/toolbar_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/map_view_margin"
        android:text="标题"
        android:textSize="@dimen/text_title_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/confirm_select_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_select_title" />

    <EditText
        android:gravity="start"
        android:id="@+id/confirm_select_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:lineSpacingExtra="@dimen/dp_6"
        android:minHeight="@dimen/dp_72"
        android:paddingEnd="@dimen/map_view_margin"
        android:paddingStart="@dimen/map_view_margin"
        android:text=""
        android:textColor="@color/text_auxiliary"
        android:textSize="@dimen/text_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_select_line" />

    <include
        android:id="@+id/confirm_select_submit"
        layout="@layout/cdqj_patrol_confirm_select_submit"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_select_content"/>


</android.support.constraint.ConstraintLayout>