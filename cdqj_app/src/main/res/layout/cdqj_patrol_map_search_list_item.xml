<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/map_search_item_line"
        android:background="@color/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_4" />

    <TextView
        android:layout_marginTop="@dimen/map_view_margin_8"
        app:layout_constraintTop_toBottomOf="@+id/map_search_item_line"
        android:textSize="@dimen/text_title_bar"
        android:textColor="@color/text_theme"
        android:layout_marginStart="@dimen/map_view_margin_8"
        android:id="@+id/map_search_item_title"
        android:text="@string/app_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>