<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    style="@style/card_radius_style_2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/map_view_margin_8"
        android:layout_marginStart="@dimen/map_view_margin"
        android:id="@+id/msg_item_send_user"
        android:textColor="@color/text_theme"
        android:textSize="@dimen/text_title_bar"
        android:text="系统消息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/msg_item_status"
        android:layout_marginEnd="@dimen/map_view_margin"
        app:layout_constraintBottom_toBottomOf="@+id/msg_item_send_user"
        android:textSize="@dimen/text_auxiliary"
        android:textColor="@color/red"
        android:text="未读"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/msg_item_time"
        android:textSize="@dimen/text_small"
        android:textColor="@color/text_auxiliary"
        android:layout_marginStart="@dimen/dp_2"
        android:text="8月29日"
        android:layout_marginTop="@dimen/map_view_margin_8"
        app:layout_constraintTop_toBottomOf="@+id/msg_item_send_user"
        app:layout_constraintLeft_toLeftOf="@+id/msg_item_send_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/msg_item_context"
        android:layout_marginTop="@dimen/map_view_margin_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp_4"
        android:text="这是一条非常紧急的消息，虽然非常紧急，但是看到了也不用去理睬，因为这本质还是一条测试的消息"
        android:textColor="@color/text_theme"
        android:textSize="@dimen/text_normal"
        app:layout_constraintLeft_toLeftOf="@+id/msg_item_send_user"
        app:layout_constraintRight_toRightOf="@+id/msg_item_status"
        app:layout_constraintTop_toBottomOf="@+id/msg_item_time" />

    <TextView
        android:id="@+id/msg_item_line"
        android:background="@color/line"
        android:layout_marginTop="@dimen/map_view_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_item_context"
        android:layout_width="0dp"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/msg_item_see_msg"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/text_theme"
        android:paddingStart="@dimen/dp_2"
        android:paddingEnd="@dimen/map_view_margin_8"
        android:text="消息已读"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/map_view_margin_8"
        android:paddingTop="@dimen/map_view_margin"
        app:layout_constraintTop_toBottomOf="@+id/msg_item_line"
        app:layout_constraintLeft_toLeftOf="@+id/msg_item_send_user"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableEnd="@mipmap/icon_gps"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>