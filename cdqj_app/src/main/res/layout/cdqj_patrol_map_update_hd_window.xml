                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/stroke_bg_radius_them_blue_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:drawableEnd="@mipmap/icon_down"
                android:textColor="@color/text_theme" />

            <TextView
                android:id="@+id/update_hd_lqsb_title"
                style="@style/toolbar_title_text"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="@dimen/dp_10"
                android:text="漏气设备"
                android:textColor="@color/text_theme"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:padding="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:id="@+id/update_hd_lqsb"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/stroke_bg_radius_them_blue_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:drawableEnd="@mipmap/icon_down"
                android:textColor="@color/text_theme" />

            <TextView
                android:id="@+id/update_hd_yhlx_title"
                style="@style/toolbar_title_text"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="@dimen/dp_10"
                android:text="隐患类型"
                android:textColor="@color/text_theme"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:padding="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:id="@+id/update_hd_yhlx"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/stroke_bg_radius_them_blue_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:drawableEnd="@mipmap/icon_down"
                android:textColor="@color/text_theme" />

        </LinearLayout>

        <TextView
            android:id="@+id/update_hd_address_title"
            style="@style/toolbar_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="隐患地址"
            android:textColor="@color/text_theme"
            android:textSize="@dimen/text_normal"
            app:layout_constraintTop_toBottomOf="@+id/update_hd_lz_ll" />

        <EditText
            android:id="@+id/update_hd_address"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/stroke_bg_radius_4"
            android:inputType="" android:padding="@dimen/dp_5"
            android:text=""
            android:hint="请输入地址"
            android:textColor="@color/text_theme"
            android:textSize="@dimen/text_normal"
            app:layout_constraintTop_toBottomOf="@+id/update_hd_address_title" />

        <TextView
            android:id="@+id/update_hd_gps_title"
            style="@style/toolbar_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="隐患坐标"
            android:textColor="@color/text_theme"
            android:textSize="@dimen/text_normal"
            app:layout_constraintTop_toBottomOf="@+id/update_hd_address" />

        <EditText
            android:id="@+id/update_hd_gps"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/stroke_bg_radius_4"
            android:enabled="false"
            android:inputType="" android:padding="@dimen/dp_5"
            android:text="123,456"
            android:textColor="@color/text_theme"
            android:textSize="@dimen/text_normal"
            app:layout_constraintTop_toBottomOf="@+id/update_hd_gps_title" />

        <TextView
            android:id="@+id/update_hd_remark_title"
            style="@style/toolbar_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="隐患描述"
            android:textColor="@color/text_theme"
            android:textSize="@dimen/text_normal"
            app:layout_constraintTop_toBottomOf="@+id/update_hd_gps" />

        <EditText
            android:id="@+id/update_hd_remark"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/stroke_bg_radius"
            android:gravity="start"
            android:hint="详情描述（非必填）"
            android:inputType="" android:minHeight="@dimen/dp_72"
            android:padding="@dimen/dp_5"
            android:textColor="@color/text_theme"
            android:textSize="@dimen/text_normal_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_hd_remark_title" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>