<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_ledger_list_xml"
    android:layout_marginBottom="@dimen/bottom_bar_height"
    tools:context=".view.ui.LedgerListFragment">

    <com.flyco.tablayout.CommonTabLayout
        android:layout_marginTop="@dimen/status_bar_height"
        android:id="@+id/ledger_list_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/white"
        tl:tl_textSelectColor="@color/text_theme"
        tl:tl_textUnselectColor="@color/text_auxiliary"
        tl:tl_iconVisible="false"
        tl:tl_textBold="SELECT"
        tl:tl_indicator_width="20dp"
        tl:tl_indicator_corner_radius="2dp"
        tl:tl_textsize="@dimen/text_title_bar"
        tl:tl_indicator_color="@color/theme_one"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/ledger_list_vp"
        android:layout_below="@+id/ledger_list_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>

</RelativeLayout>