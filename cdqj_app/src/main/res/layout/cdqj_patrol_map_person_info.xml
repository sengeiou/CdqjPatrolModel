<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/map_person_dialog_title"
        android:text="李四"
        style="@style/toolbar_title_text"
        android:textSize="@dimen/text_title"
        android:textColor="@color/text_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/map_person_dialog_level"
        android:paddingBottom="@dimen/dp_2"
        android:paddingTop="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_5"
        android:paddingStart="@dimen/dp_5"
        android:layout_marginStart="@dimen/map_view_margin_8"
        android:background="@drawable/stroke_bg_radius_order_item_green"
        android:textColor="@color/white"
        android:text="上班离线"
        android:textSize="@dimen/text_auxiliary"
        app:layout_constraintLeft_toRightOf="@+id/map_person_dialog_title"
        app:layout_constraintTop_toTopOf="@+id/map_person_dialog_title"
        app:layout_constraintBottom_toBottomOf="@+id/map_person_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/map_person_dialog_title"
        android:id="@+id/map_person_dialog_distance"
        android:text="巡检一班组"
        android:layout_marginTop="@dimen/map_view_margin"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/text_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_person_dialog_distance"
        android:id="@+id/map_person_dialog_address"
        android:text="当前位于：少陵路19号"
        android:layout_marginTop="@dimen/map_view_margin"
        android:paddingEnd="112dp"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/text_theme"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/map_person_dialog_address"
        android:id="@+id/map_person_dialog_update"
        android:text="2018-09-06 10:30 上报"
        android:layout_marginTop="@dimen/map_view_margin"
        android:layout_marginStart="@dimen/map_view_margin"
        android:textSize="@dimen/text_small"
        android:textColor="@color/text_auxiliary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/map_person_dialog_img"
        android:contentDescription="TODO" android:scaleType="centerCrop"
        android:src="@mipmap/ic_image_empty"
        app:layout_constraintBottom_toBottomOf="@+id/map_person_dialog_update"
        app:layout_constraintTop_toTopOf="@+id/map_person_dialog_title"
        app:layout_constraintRight_toRightOf="@+id/map_person_dialog_line"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/map_person_dialog_line"
        android:layout_marginTop="@dimen/map_view_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_person_dialog_update"
        android:background="@color/line"
        android:layout_width="0dp"
        android:layout_height="1dp" />

    <TextView
        android:drawableEnd="@mipmap/icon_gps"
        android:id="@+id/map_person_dialog_see"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/text_theme"
        android:paddingEnd="@dimen/dp_6"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_2"
        android:text="查看轨迹"
        app:layout_constraintTop_toBottomOf="@+id/map_person_dialog_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>