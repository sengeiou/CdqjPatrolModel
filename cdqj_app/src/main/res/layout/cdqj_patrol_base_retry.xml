<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/empty_view_rl"
    android:layout_height="match_parent">

    <!-- Here is the view to show if the list is emtpy -->

    <ImageView
        app:layout_constraintVertical_bias="0.3"
        android:id="@+id/empty_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/img_no_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/map_view_margin_8"
        android:id="@+id/empty_log"
        android:textColor="@color/text_auxiliary"
        android:textSize="@dimen/text_auxiliary"
        app:layout_constraintTop_toBottomOf="@+id/empty_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/net_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/dp_25"
        android:id="@+id/empty_refresh"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_25"
        android:paddingStart="@dimen/dp_25"
        android:background="@drawable/stroke_bg_radius_them_blue_4"
        app:layout_constraintTop_toBottomOf="@+id/empty_log"
        android:textColor="@color/theme_one"
        android:textSize="@dimen/text_title_bar"
        android:text="刷新"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
